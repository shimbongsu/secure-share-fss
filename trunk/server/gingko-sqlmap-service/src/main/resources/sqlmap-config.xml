    <sqlMap resource="com/s7turn/search/member/AccessHistory.xml" />
    <sqlMap resource="com/s7turn/search/commons/PhysicalFile.xml" />
    
    <!--
    Community
    -->
    <sqlMap resource="com/s7turn/community/Blog.xml" />
    <sqlMap resource="com/s7turn/community/BlogEntry.xml" />
    <sqlMap resource="com/s7turn/community/Comment.xml" />
    <sqlMap resource="com/s7turn/community/Friend.xml" />
    <sqlMap resource="com/s7turn/community/Gallery.xml" />
    <sqlMap resource="com/s7turn/community/Group.xml" />
    <sqlMap resource="com/s7turn/community/GroupTeam.xml" />
    <sqlMap resource="com/s7turn/community/Message.xml" />
    <sqlMap resource="com/s7turn/community/Photo.xml" />
    
    <!--
      Gingko system
    -->
    <sqlMap resource="com/s7turn/gingkos/Gingko.xml" />
